<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
android:layout_height="match_parent">
<include layout="@layout/activity_main_scrollable_view" />

<LinearLayout
    android:layout_centerInParent="true"
    android:layout_marginTop="70dp"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:layout_width="250dp"
    android:layout_height="wrap_content">

    <TextView android:text="Score :"
        android:textSize="34dp"
        android:textColor="@android:color/white"
        android:id="@+id/activity_main_tv_score"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView android:text="0"
            android:textSize="100dp"
            android:textColor="@android:color/white"
            android:id="@+id/activity_main_tv_score_red"
            android:layout_marginTop="25dp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:text=" - "
            android:textSize="100dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:text="0"
            android:textSize="100dp"
            android:id="@+id/activity_main_tv_score_blue"
            android:textColor="@android:color/white"
            android:layout_marginTop="25dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>

</RelativeLayout>
